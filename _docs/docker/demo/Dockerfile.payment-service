FROM maven:3.9-eclipse-temurin-17 AS build
WORKDIR /app
COPY pom.xml .
# Copy all module pom.xml files so Maven can validate parent POM structure
COPY order-service/pom.xml ./order-service/
COPY storage-service/pom.xml ./storage-service/
COPY account-service/pom.xml ./account-service/
COPY bff/pom.xml ./bff/
COPY payment-service/pom.xml ./payment-service/
# Try to download dependencies offline, but don't fail if network issues occur
RUN mvn dependency:go-offline -pl payment-service -B || true

COPY payment-service ./payment-service
RUN mvn clean package -pl payment-service -DskipTests -B

FROM eclipse-temurin:17-jre-alpine
WORKDIR /app
COPY --from=build /app/payment-service/target/*.jar app.jar
EXPOSE 8090
ENTRYPOINT ["java", "-jar", "app.jar"]
